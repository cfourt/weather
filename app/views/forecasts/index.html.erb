<p style="color: green"><%= notice %></p>
<p style="color: red"><%= flash[:error] %></p>

<div class="text-center mt-5">
  <h1>Hail Yeah 🌨️</h1>
  <div data-turbo="false">
    <%= form_with url: forecasts_path do |f| %>
      <%= f.label :address, "Enter an Address to see your forecast", class: 'fw-bold mt-5' %>
      <br>
      <%= f.text_field :address %>
      <%#= f.submit "Get Forecast", class: 'btn btn-primary btn-sm' %>
    <% end %>
  </div>
</div>


<% if @forecasts.any? %>
  <h2 class="mt-5">Previous requests</h2>
  <div id="forecasts">
    <% @forecasts.each do |forecast| %>
      <%= link_to forecast do %>
        <div class="card">
          <div class="card-body">
            <%= content_tag :h5, "#{forecast.address} - #{time_ago_in_words(forecast.updated_at)} ago" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
